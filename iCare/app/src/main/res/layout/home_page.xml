<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background_color">

    <LinearLayout
        android:id="@+id/secondary_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/textViewAddNewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="btnAddNew"
            android:text="@string/add_new_profile"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnMyProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:onClick="btnMyHealth"
                android:background="@mipmap/my"
                android:text="@string/my_health"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="bottom|center" />

            <Button
                android:id="@+id/btnFamilyProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:onClick="btnFamilyHealth"
                android:background="@mipmap/family"
                android:text="@string/family_health"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="bottom|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/btnHospitals"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:onClick="careCenterList"
                android:background="@mipmap/hospital"
                android:text="Care Centers"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom|center" />

            <Button
                android:id="@+id/btnDoctors"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:onClick="doctorList"
                android:background="@mipmap/doctor"
                android:text="@string/doctors"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="bottom|center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
